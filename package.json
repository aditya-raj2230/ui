{
  "name": "@nenkan/ui",
  "version": "0.14.0",
  "description": "Reusable React components following Nenkan styles",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "node ./scripts/clean.js && babel src --out-dir dist --copy-files --source-maps && node ./scripts/build.js",
    "build:watch": "nodemon --watch src --exec npm run build",
    "lint": "eslint *.js stories/*.jsx",
    "release": "npm run build && cd dist && npm publish",
    "test": "wait-on http://localhost:6006 && test-storybook",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build --preview-url=/ui/iframe.html --force-build-preview",
    "postbuild:storybook": "perl -i -p -e 's#<head>#<head>\n\t\t<base href='/ui/'>#' ./storybook-static/index.html"
  },
  "author": "nenkan",
  "homepage": "https://www.nen-kan.com/ui",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.3.2",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-icons": "^4.8.0",
    "react-markdown": "^6.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nenkan/ui.git"
  },
  "source": true,
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "@chromatic-com/storybook": "^1.3.5",
    "@nenkan/css": "^0.18.0",
    "@storybook/addon-actions": "^8.0.10",
    "@storybook/addon-essentials": "^8.0.10",
    "@storybook/addon-links": "^8.0.10",
    "@storybook/addon-webpack5-compiler-babel": "^3.0.3",
    "@storybook/cli": "^8.0.10",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^8.0.10",
    "@storybook/react-webpack5": "^8.0.10",
    "@storybook/test-runner": "^0.18.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.40.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-storybook": "^0.8.0",
    "nodemon": "^2.0.22",
    "react-dom": "^18.2.0",
    "sass": "^1.63.3",
    "sass-loader": "^13.2.2",
    "storybook": "^8.0.10",
    "style-loader": "^3.3.2",
    "wait-on": "^7.0.1"
  }
}
